# Maintainer: Ivailo Monev <xakepa10@gmail.com>

version=1.3
release=1
_version=1.3-20190808
description="Script-driven curses widgets"
depends=('curses')
sources=("https://invisible-mirror.net/archives/dialog/dialog-$_version.tgz"
        'dialogrc')

src_compile() {
    cd "$SOURCE_DIR/dialog-$_version"

    ./configure --prefix=/usr \
        --enable-widec \
        --without-libtool
    make
}

src_install() {
    cd "$SOURCE_DIR/dialog-$_version"

    make DESTDIR="$INSTALL_DIR" install install-lib
    install -vDm644 "$SOURCE_DIR/dialogrc" "$INSTALL_DIR/etc/dialogrc"
}
